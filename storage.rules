rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is owner by path
    function isOwnerPath(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Expenses receipts
    match /users/{userId}/expenses/{expenseId}/receipts/{fileName} {
      allow read: if isOwnerPath(userId);
      allow write: if isOwnerPath(userId)
        && request.resource.size < 10 * 1024 * 1024
        && (request.resource.contentType.matches('application/pdf') ||
            request.resource.contentType.matches('image/.*'));
      allow delete: if isOwnerPath(userId);
    }
    
    // Add other storage paths here as needed
  }
}

